    .ui-jqgrid tr.ui-row-ltr td{
        border-bottom-color: transparent;
    }
    .ui-jqgrid .ui-pg-input, .ui-jqgrid .ui-pg-selbox {
        height: auto;
    }
    .ui-jqgrid tr.jqgrow td {font-size:1.2em}
</style>
